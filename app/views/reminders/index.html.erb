<h1>Lembretes</h1>

<table>
  <thead>
    <tr>
      <th>Remind</th>
      <th>Remind date</th>
      <th>Read</th>
      <th>User</th>
      <th>Attendance request</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reminders.each do |reminder| %>
      <tr>
        <td><%= reminder.remind %></td>
        <td><%= reminder.remind_date %></td>
        <td><%= reminder.read %></td>
        <td><%= reminder.attendance_request %></td>
        <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
        <td><%= link_to 'Destroy', reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Lembrete', new_reminder_path, class:"btn btn-success" %>
