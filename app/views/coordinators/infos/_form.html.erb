<%= form_for @coordinator, url: aux do |f| %>
  <% if @coordinator.errors.any? %>
    <div class="alert alert-warning">
      <h5>Opa, temos alguns problemas:</h5>

      <ul class="mb-0">
        <% @coordinator.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :notices %>
    <%= f.text_area :notices, class: "form-control", rows:"10" %>
  </div>

  <div class="form-group">
    <%= f.label :office_hours %>
    <%= f.text_field :office_hours, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit 'Atualizar', class: "btn btn-success" %>
    <span>&nbsp;|&nbsp;</span>
    <%= link_to "Voltar", coordinators_infos_path, class: "btn btn-primary" %>
  </div>
<% end %>
