<%= form_for @credit_form do |f| %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>

  <%= f.fields_for :credit_items do |builder| %>
    <%= render 'credit_item_fields', f: builder %>
  <% end %>

  <p><%= link_to_add_fields "Add Item", f, :credit_items %></p>

  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>